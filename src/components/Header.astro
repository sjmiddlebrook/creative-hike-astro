---
import { SITE_TITLE } from '@utils/consts';
import Logo from './Logo.astro';
import HeaderFlyover from './HeaderFlyover.svelte';
---

<header>
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6">
    <ul class="flex items-center space-x-6 sm:space-x-8">
      <li>
        <a href="/" class="flex items-center space-x-4">
          <Logo class="h-10 rounded-full border bg-teal-100" />
          <span class="font-semibold text-zinc-800 dark:text-zinc-100">{SITE_TITLE}</span>
        </a>
      </li>
      <li>
        <HeaderFlyover client:load />
      </li>
    </ul>

    <div />
  </nav>
</header>
